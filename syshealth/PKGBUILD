pkgname=syshealth
pkgver=0.2
pkgrel=1
pkgdesc="Quick health check for Arch system"
arch=('any')
url="https://github.com/jgthomas/scripts"
license=('GPL3')
depends=('pacman-contrib' 'ncurses')
source=("${pkgname}")
md5sums=('SKIP')


package() {

        install -D -m644 "$srcdir/${pkgname}" "$pkgdir/usr/bin/${pkgname}"

        chmod +x "$pkgdir/usr/bin/${pkgname}"

}


