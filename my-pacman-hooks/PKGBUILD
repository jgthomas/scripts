pkgname=my-pacman-hooks
pkgver=1.10
pkgrel=1
pkgdesc="Hooks for pacman"
arch=('any')
url="https://github.com/jgthomas/scripts"
license=('GPL3')
depends=('pacman-contrib' 'reflector')
source=("00-clearcache.hook"
        "01-clearcustomcache.hook"
        "03-mirrorupgrade.hook"
        "02-clearaurcache.hook"
        "04-systemd-boot.hook"
        "05-pacman-foreign.hook"
        "06-pacman-unrequired.hook"
        "07-pacnew-check.hook")
md5sums=('SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP')


package() {

        install -Dm 644 "$srcdir/00-clearcache.hook" "$pkgdir/etc/pacman.d/hooks/00-clearcache.hook"
        install -Dm 644 "$srcdir/01-clearcustomcache.hook" "$pkgdir/etc/pacman.d/hooks/01-clearcustomcache.hook"
        install -Dm 644 "$srcdir/02-clearaurcache.hook" "$pkgdir/etc/pacman.d/hooks/02-clearaurcache.hook"
        install -Dm 644 "$srcdir/03-mirrorupgrade.hook" "$pkgdir/etc/pacman.d/hooks/03-mirrorupgrade.hook"
        install -Dm 644 "$srcdir/04-systemd-boot.hook" "$pkgdir/etc/pacman.d/hooks/04-systemd-boot.hook"
        install -Dm 644 "$srcdir/05-pacman-foreign.hook" "$pkgdir/etc/pacman.d/hooks/05-pacman-foreign.hook"
        install -Dm 644 "$srcdir/06-pacman-unrequired.hook" "$pkgdir/etc/pacman.d/hooks/06-pacman-unrequired.hook"
        install -Dm 644 "$srcdir/07-pacnew-check.hook" "$pkgdir/etc/pacman.d/hooks/07-pacnew-check.hook"

}


